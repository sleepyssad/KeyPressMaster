<UserControl x:Class="KeyPressMaster.View.Components.PresetsInfoContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyPressMaster.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="15" MaxWidth="200">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
                <Setter Property="LineHeight" Value="16"/>
                <Setter Property="Margin" Value="0,3,0,3"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Opacity" Value=".5"/>
            </Style>
        </StackPanel.Resources>
        <TextBlock>Here you can create and manage presets.</TextBlock>
        <TextBlock>To create a preset click on the "Create new preset" button.</TextBlock>
        <TextBlock>To manage a preset, click on the preset.</TextBlock>
    </StackPanel>
</UserControl>
