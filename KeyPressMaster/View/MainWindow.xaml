<Window x:Class="KeyPressMaster.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyPressMaster"
        mc:Ignorable="d"
        Height="500"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="0"
        ResizeMode="NoResize">
    
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="65"/>
    </WindowChrome.WindowChrome>


    <Border Background="{DynamicResource Main}"
            BorderBrush="{DynamicResource Stroke.100}"
            BorderThickness="1"
            CornerRadius="20">
        <StackPanel Margin="0,110,0,0">
            <Button Content="Blue" Click="Button_Click"/>
            <Button Content="Violet" Click="Button_Click"/>
            <Button Content="Orange" Click="Button_Click"/>
            <Button Content="White" Click="Button_Click"/>
            <Button Content="Black" Click="Button_Click"/>

        </StackPanel>
    </Border>

     
</Window>
