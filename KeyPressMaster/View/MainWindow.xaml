<Window x:Class="KeyPressMaster.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyPressMaster"
        xmlns:control="clr-namespace:KeyPressMaster.View.Controls"
        xmlns:component="clr-namespace:KeyPressMaster.View.Components"
        mc:Ignorable="d"
        Height="500"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="0"
        ResizeMode="NoResize">

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="65" CornerRadius="20"/>
    </WindowChrome.WindowChrome>


    <Grid>
        <Border Background="{DynamicResource Main}"
            BorderBrush="{DynamicResource Stroke.100}"
            BorderThickness="1"
            CornerRadius="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="65"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <component:Header/>

                <Grid VerticalAlignment="Bottom" Grid.Row="1" Margin="10,0,10,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <control:ExtendButton CornerRadius="5,0,0,5" Background="#0079FF" Foreground="Transparent" Grid.Column="0" Height="20" Content="Blue" Click="Button_Click"/>
                    <control:ExtendButton Grid.Column="1" Background="#8B23F2" Foreground="Transparent" Height="20" Content="Violet" Click="Button_Click"/>
                    <control:ExtendButton x:Name="dsdsd" Grid.Column="2" Background="#F26E23" Foreground="Transparent" Height="20" Content="Orange" Click="Button_Click"/>
                    <control:ExtendButton Grid.Column="3" Background="#ffffff" Foreground="Transparent" Height="20" Content="White" Click="Button_Click"/>
                    <control:ExtendButton CornerRadius="0,5,5,0" Background="#000000" Foreground="Transparent" Grid.Column="4" Height="20" Content="Black" Click="Button_Click"/>
                </Grid>


            </Grid>
        </Border>

        <control:ContextModalForm/>

    </Grid>
   

</Window>


